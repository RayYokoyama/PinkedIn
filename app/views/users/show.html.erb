<h1>プロフィール画面</h1>
<% if @enterprise_account %>
  <h2>企業情報</h2>
  <p><%= @enterprise_account.name %></p>
  <p><%= @enterprise_account.hiragana %></p>
  <p><%= link_to('企業情報編集', edit_enterprise_account_path(@enterprise_account)) %></p>
<% end %>

<h2>ユーザー情報</h2>
<p>ユーザー名      :<%= @user.name %><p>
<p>ユーザー名(カナ):<%= @user.hiragana %></p>
<p>生年月日        :<%= @user.birth_day %></p>
<p>出身大学        :<%= @user.graduated_university %></p>
<p>現在の職種      :<%= @user.current_career %></p>

<% if current_user.id == params[:id] || request.fullpath.include?('profile')%>
  <p><%= link_to('プロフィール編集', edit_user_path) %></p>
<% end %>
