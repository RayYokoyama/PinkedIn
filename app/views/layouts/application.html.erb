<!DOCTYPE html>
<html>
  <head>
    <title>PinkedIn</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% unless %w[/logout /signup /login].include?(request.path) %>
      <header>
        <% if current_user&.admin? %><p>adminユーザーでログインしています。</p><% end %>
        <ul>
          <li><%= link_to('トップ', root_path ) %></li>
          <% if current_user %>
            <li><%= link_to('ログアウト', '/logout', method: :delete) %></li>
            <li><%= link_to('プロフィールページ', '/user/profile') %></li>
            <li><%= link_to('求人一覧', '/offers') %></li>
          <% else %>
            <li><%= link_to('ユーザー登録', '/signup') %></li>
            <li><%= link_to('企業ユーザー登録', '/ea_signup') %></li>
            <li><%= link_to('ログイン', '/login' ) %></li>
          <% end %>
        </ul>
      </header>
    <% end %>
    <%= yield %>
  </body>
</html>
